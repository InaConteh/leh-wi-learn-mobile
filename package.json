{
  "name": "leh-wi-learn-mobile",
  "version": "1.0.0",
  "description": "Leh Wi Learn - Mobile App (Offline-first Expo + WatermelonDB + Supabase)",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "prebuild": "expo prebuild --clean",
    "eas-build-preview": "expo prebuild && eas build --profile preview --platform android",
    "eas-build-production": "eas build --profile production --platform android",
    "lint": "eslint src --ext .ts,.tsx",
    "tsc": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "eject": "expo eject"
  },
  "dependencies": {
    "expo": "^51.0.0",
    "expo-image-picker": "^15.0.0",
    "expo-build-properties": "^0.11.0",
    "expo-splash-screen": "^0.27.0",
    "@react-navigation/native": "^6.1.0",
    "@react-navigation/native-stack": "^6.9.0",
    "react": "^18.2.0",
    "react-native": "^0.74.0",
    "react-native-paper": "^5.11.0",
    "react-native-screens": "^3.29.0",
    "react-native-safe-area-context": "^4.8.0",
    "@supabase/supabase-js": "^2.38.0",
    "@watermelondb/watermelondb": "^0.27.1",
    "@watermelondb/sqlite": "^0.27.1",
    "@watermelondb/react": "^0.27.1",
    "@react-native-community/netinfo": "^11.0.0",
    "zustand": "^4.4.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-native": "0.73.0",
    "@types/jest": "^29.5.0",
    "@testing-library/react-native": "^12.1.2",
    "jest": "^29.7.0",
    "jest-expo": "^51.0.0",
    "typescript": "^5.3.0",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
